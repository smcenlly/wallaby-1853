{
  "name": "client",
  "version": "1.0.0",
  "scripts": {
    "test": "jest"
  },
  "dependencies": {
    "@kpvlab/color-utils": "2.0.4"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/__tests__/setup.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testRegex": "src/.*/__tests__/.*?-test.js$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|frag|vert)$": "<rootDir>/src/__tests__/file-mock.js",
      "\\.css$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@kpvlab)"
    ],
    "globals": {
      "API_PORT": "9009",
      "__DEV__": true
    },
    "testURL": "http://localhost:3009"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "babel-jest": "^23.6.0",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-react": "7.0.0"
  }
}
